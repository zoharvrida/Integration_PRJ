<!DOCTYPE validators PUBLIC
              "-//Apache Struts//XWork Validator 1.0.2//EN"
              "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
    <field name="idUser">
        <field-validator type="requiredstring">
            <message>You must enter your User ID.</message>
        </field-validator>
    </field>
    <field name="password">
        <field-validator type="requiredstring">
            <message>Your password should not be empty.</message>
        </field-validator>
    </field>
</validators>
